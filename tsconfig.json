{
    "compilerOptions": {
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "target": "ES2022",
        "module": "Node16",
        "moduleResolution": "NodeNext",
        "strictNullChecks": true,
        "isolatedModules": true,
        "strict": true,
        "allowJs": true,
        "checkJs": true,
        "outDir": "./dist",
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./src/index.js",
        "./src/**/*.js",
        "./src/**/*.ts",
    ],
}