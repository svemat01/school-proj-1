<div class="body">
    <table class="users-table">
        <thead>
            <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price (â‚½)</th>
            <th>Stock</th>
        </tr>
        </thead>
        <tbody>
            {{#each products}}
                <tr>
                    <td>
                        {{this.id}}
                    </td>
                    <td>
                        {{this.name}}
                    </td>
                    <td>
                        {{this.description}}
                    </td>
                    <td>
                        <input type="number" value={{this.price}} />
